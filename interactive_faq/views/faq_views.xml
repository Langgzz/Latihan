<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FAQ Category Views -->
    <record id="view_faq_category_tree" model="ir.ui.view">
        <field name="name">faq.category.tree</field>
        <field name="model">faq.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="icon"/>
            </tree>
        </field>
    </record>

    <record id="view_faq_category_form" model="ir.ui.view">
        <field name="name">faq.category.form</field>
        <field name="model">faq.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="icon"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- FAQ Views -->
    <record id="view_faq_tree" model="ir.ui.view">
        <field name="name">faq.faq.tree</field>
        <field name="model">faq.faq</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category_id"/>
            </tree>
        </field>
    </record>

    <record id="view_faq_form" model="ir.ui.view">
        <field name="name">faq.faq.form</field>
        <field name="model">faq.faq</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Answer">
                            <field name="answer"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_faq" model="ir.actions.act_window">
        <field name="name">FAQs</field>
        <field name="res_model">faq.faq</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_faq_category" model="ir.actions.act_window">
        <field name="name">FAQ Categories</field>
        <field name="res_model">faq.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_faq_root" 
        name="FAQ" 
        sequence="100"/>

    <menuitem id="menu_faq_main" 
        name="FAQs"
        parent="menu_faq_root"
        action="action_faq"
        sequence="10"/>

    <menuitem id="menu_faq_category" 
        name="Categories"
        parent="menu_faq_root"
        action="action_faq_category"
        sequence="20"/>
</odoo>