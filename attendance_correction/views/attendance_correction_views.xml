<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_attendance_correction_form" model="ir.ui.view">
            <field name="name">hr.attendance.correction.form</field>
            <field name="model">hr.attendance.correction</field>
            <field name="arch" type="xml">
                <form string="Attendance Correction">
                    <header>
                        <button name="action_submit" string="Submit" type="object" class="oe_highlight" states="draft"/>
                        
                        <button name="action_atasan_approve" string="Atasan Approve" type="object" class="oe_highlight" 
                                states="submitted" groups="attendance_correction.group_atasan_approver"/>
                        
                        <button name="action_hrd_approve" string="HRD Approve" type="object" class="oe_highlight" 
                                states="atasan_approved" groups="hr_attendance.group_hr_attendance_user"/>

                        <!-- Tombol Reject untuk Atasan: hanya muncul saat status submitted -->
                        <button name="action_reject" string="Reject" type="object"
                                states="submitted"
                                groups="attendance_correction.group_atasan_approver"/>

                        <!-- Tombol Reject untuk HRD: muncul saat status atasan_approved -->
                        <button name="action_reject" string="Reject" type="object"
                                states="atasan_approved"
                                groups="hr_attendance.group_hr_attendance_user"/>

                        <button name="action_reset" string="Reset to Draft" type="object" states="rejected,atasan_approved" groups="hr_attendance.group_hr_attendance_user"/>
                        
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,atasan_approved,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group string="Employee Details">
                                <field name="employee_id"/>
                                <field name="date"/>
                                <field name="user_id" invisible="1"/>
                            </group>
                            <group string="Correction Reason">
                                <field name="reason"/>
                            </group>
                        </group>
                        
                        <separator string="Attendance Details"/>
                        <group col="4">
                            <field name="check_in_original"/>
                            <field name="check_out_original"/>
                            <field name="check_in_new"/>
                            <field name="check_out_new"/>
                        </group>
                        
                        <notebook>
                            <page string="Attachments">
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </page>
                            <page string="Audit Log" groups="hr_attendance.group_hr_attendance_user,attendance_correction.group_atasan_approver">
                                <field name="log_ids">
                                    <tree readonly="1">
                                        <field name="change_date"/>
                                        <field name="changed_by"/>
                                        <field name="check_in_before"/>
                                        <field name="check_in_after"/>
                                        <field name="check_out_before"/>
                                        <field name="check_out_after"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_attendance_correction_tree" model="ir.ui.view">
            <field name="name">hr.attendance.correction.tree</field>
            <field name="model">hr.attendance.correction</field>
            <field name="arch" type="xml">
                <tree string="Correction Requests" decoration-info="state == 'submitted' or state == 'atasan_approved'" decoration-muted="state == 'rejected'" decoration-success="state == 'approved'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="reason"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_my_attendance_correction" model="ir.actions.act_window">
            <field name="name">My Correction Requests</field>
            <field name="res_model">hr.attendance.correction</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new correction request
              </p>
            </field>
        </record>

        <record id="action_all_attendance_correction" model="ir.actions.act_window">
            <field name="name">All Correction Requests</field>
            <field name="res_model">hr.attendance.correction</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Manage all correction requests
              </p>
            </field>
        </record>

        <menuitem id="menu_attendance_correction_root" 
                  name="Correction Requests" 
                  parent="hr_attendance.menu_hr_attendance_root" 
                  sequence="20"/>

        <menuitem id="menu_my_attendance_correction" 
                  name="My Requests" 
                  parent="menu_attendance_correction_root" 
                  action="action_my_attendance_correction" 
                  sequence="1"/>

        <menuitem id="menu_all_attendance_correction" 
                  name="All Requests (Atasan &amp; HRD)" 
                  parent="menu_attendance_correction_root" 
                  action="action_all_attendance_correction" 
                  groups="hr_attendance.group_hr_attendance_user,attendance_correction.group_atasan_approver"
                  sequence="2"/>
    </data>
</odoo>