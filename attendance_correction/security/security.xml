<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="res.groups" id="group_attendance_correction_employee">
            <field name="name">Attendance Correction / Karyawan Biasa</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>
        
        <record model="res.groups" id="group_atasan_approver">
            <field name="name">Attendance Correction / Atasan Approver</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>
        
    <data>
        <record id="rule_attendance_correction_employee" model="ir.rule">
            <field name="name">Attendance Correction: Employee (Own)</field>
            <field name="model_id" ref="model_hr_attendance_correction"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="rule_attendance_correction_atasan_approver" model="ir.rule">
            <field name="name">Attendance Correction: Atasan Approver All</field>
            <field name="model_id" ref="model_hr_attendance_correction"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_atasan_approver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_attendance_correction_manager" model="ir.rule">
            <field name="name">Attendance Correction: Manager (Subordinates)</field>
            <field name="model_id" ref="model_hr_attendance_correction"/>
            <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('employee_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('hr_attendance.group_hr_attendance_user'))]"/>
        </record>

        <record id="rule_attendance_correction_all" model="ir.rule">
            <field name="name">Attendance Correction: HR All</field>
            <field name="model_id" ref="model_hr_attendance_correction"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr_attendance.group_hr_attendance_manager'))]"/>
        </record>
    </data>
</odoo>